	journal = {Molecular Microbiology},
	author = {Kok, Ruben G. and van Thor, Jasper J. and Nugteren-Roodzant, Inge M. and Brouwer, Marc B. W. and Egmond, Maarten R. and Nudel, Clara B. and Vosman, Ben and Hellingwerf, Klaas J.},
	month = mar,
